{% extends 'base.html.twig' %}

{% block title %}{{ product.name}} - La Boutique Francaise{% endblock %}

{% block content %}
    <h1>{{ product.name}}</h1>
    <div class="">
            <div class="col-md5">
                <img src="/uploads/{{ product.illustration }}" style="width:300px;height:300px;" alt="{{ product.name }}" class="img-fluid">

                <div class="col-md-7 my-auto">
                    <h3>{{ product.name }}</h3>
                    <p>{{ product.subtitle }}</p>
                    {{ (product.price/100)|number_format(2,",",".")  }}â‚¬
                    <hr>
                    <p >{{product.description}}</p>
                    <a href="{{ path('add_to_cart',{"id": product.id}) }}" class="btn btn-primary ">Ajouter au panier</a>
                </div>
            </div>
    </div>

{% endblock %}
